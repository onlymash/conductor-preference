<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Theme">

        <attr name="backgroundCompat" />
        <attr name="dialogPreferenceStyle" />

        <!-- Default style for EditTextPreference. -->
        <attr name="editTextPreferenceStyle" format="reference" />
        <!-- Default style for simple menu preferences. -->
        <attr name="simpleMenuPreferenceStyle" format="reference" />
    </declare-styleable>
    <!-- Base attributes available to EditTextPreference. -->
    <declare-styleable name="EditTextPreference">
        <attr name="inputType" format="reference"/>
        <attr name="android:inputType"/>
        <attr name="singleLine" format="boolean"/>
        <attr name="android:singleLine"/>
        <attr name="selectAllOnFocus" format="boolean"/>
        <attr name="android:selectAllOnFocus"/>
        <attr name="commitOnEnter" format="boolean"/>
        <attr name="hint" format="string"/>
        <attr name="android:hint"/>
    </declare-styleable>

    <declare-styleable name="ForegroundCheckTextView">
        <attr name="android:foregroundGravity"/>
        <attr name="android:foreground"/>
        <attr name="foregroundInsidePadding" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="SimpleMenuPreference">
        <attr name="popupStyle" format="reference"/>
    </declare-styleable>

    <declare-styleable name="SimpleMenuPopup">
        <!--<attr name="animationStyle" format="reference" />-->
        <eat-comment />

        <attr name="listMarginHorizontal" format="dimension" />
        <attr name="listMarginVertical" format="dimension" />
        <attr name="listItemPadding" format="dimension" />
        <attr name="listElevation" format="dimension" />

        <attr name="dialogMarginHorizontal" format="dimension" />
        <attr name="dialogMarginVertical" format="dimension" />
        <attr name="dialogItemPadding" format="dimension" />
        <attr name="dialogElevation" format="dimension" />
        <attr name="dialogMaxWidth" format="dimension" />

        <attr name="unit" format="dimension" />
        <attr name="maxUnits" format="integer" />
    </declare-styleable>
</resources>